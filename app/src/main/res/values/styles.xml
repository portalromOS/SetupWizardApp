<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ButtonStyle">
        <item name="fontFamily">@font/ff_montserrat_regular</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerSize">16dp</item>
        <item name="android:textAllCaps">false</item>


    </style>

    <style name="ButtonCleanStyle">
        <item name="fontFamily">@font/ff_montserrat_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="TextH1Style">
        <item name="android:fontFamily">@font/ff_monserrat_medium</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="TextH2Style">
        <item name="android:fontFamily">@font/ff_monserrat_semibold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="TextH3Style">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="TextH4Style">
        <item name="android:fontFamily">@font/ff_montserrat_regular</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/textLight</item>
    </style>



    <style name="localeSpinnerStyle">
        <!--item name="android:backgroundTint">@android:color/transparent</item-->
    </style>

    </resources>